<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MECÁNICA SEC.1"
        android:id="@+id/nameTextView"
        android:textColor="@color/text_dark"
        android:textSize="20sp"
        android:textStyle="bold"
        android:maxLines="3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUSTAMANTE SEPÚLVEDA MIGUEL ARTURO"
        android:layout_below="@id/nameTextView"
        android:id="@+id/organizerTextView"
        android:textColor="@color/primary"
        android:textSize="16sp"
        android:maxLines="3"
        android:layout_marginTop="6dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="101-A"
        android:id="@+id/roomTextView"
        android:layout_below="@id/organizerTextView"
        android:textColor="@color/text_light"
        android:textSize="22sp"
        android:maxLines="3"
        android:layout_marginTop="6dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15:00 - 16:00 25-09-2014"
        android:id="@+id/dateTextView"
        android:layout_below="@id/roomTextView"
        android:textColor="@color/text_lighter"
        android:textSize="16sp"
        android:textStyle="italic"
        android:maxLines="3"
        android:layout_marginTop="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>